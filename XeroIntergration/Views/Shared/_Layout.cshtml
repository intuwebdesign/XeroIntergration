<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css?v=1" rel="stylesheet" />
</head>
<body>
    <div class="navbar navColour">
        <div class="container">
            <ul class="list-inline">
                <li class="list-inline-item">@Html.ActionLink("Xero Demo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li class="list-inline-item">@Html.ActionLink("Create Contact", "Index", "Contacts", new { area = "" }, new { @class = "navbar-brand" })</li>
                <li class="list-inline-item">@Html.ActionLink("List Of Customers/Create Invoice", "ListOfCustomers", "Contacts", new { area = "" }, new { @class = "navbar-brand" })</li>
            </ul>
           
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
