@model XeroIntergration.Models.Customer.CustomerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h4>Add New Customer</h4>
            @using (Html.BeginForm("CreateCustomer", "Contacts", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCustomer", name = "frmCustomer" }))
            {
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.EmployeeName, new { Class = "form-control", Placeholder = "Employee name" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.EmployeeEmail, new { Class = "form-control", Placeholder = "Employee email" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyName, new { Class = "form-control", Placeholder = "Company name" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyAddress, new { Class = "form-control", Placeholder = "Company address" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyCity, new { Class = "form-control", Placeholder = "Company city" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyCounty, new { Class = "form-control", Placeholder = "Company county" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyPostCode, new { Class = "form-control", Placeholder = "Company post-code" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyCountry, new { Class = "form-control", Placeholder = "Company country" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyPhoneCountryCode, new { Class = "form-control", Placeholder = "Phone country code" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyPhoneAreaCode, new { Class = "form-control", Placeholder = "Phone area code" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyPhoneNumber, new { Class = "form-control", Placeholder = "Company phone number" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyMobileNumber, new { Class = "form-control", Placeholder = "Company mobile number" })
                </div>
                <div class="input-group p-2">
                    @Html.TextBoxFor(x => x.CompanyFaxNumber, new { Class = "form-control", Placeholder = "Company fax number" })
                </div>
                <div class="input-group p-2">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            }
        </div>
    </div>
</div>



